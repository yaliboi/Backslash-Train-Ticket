{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "es2017",
      "lib": ["dom", "dom.iterable", "ES6"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "ES6",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve"
    },
    "include": ["./src"]
  }